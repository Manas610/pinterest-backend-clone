<% include ./partials/header.ejs %>
  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[25vw]  bg-zinc-100 px-16 py-10 rounded-[30px]">
      <h1 class="text-4xl tracking-tighter capitalize text-center font-semibold text-zinc-700 leading-none mb-10">Craete New Account</h1>
      <form action="/register" method="post">
        <input class="block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">
        <input class="block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full-Name">
        <input class="block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class="block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <a href="#" class="mt-2 font-semibold text-zinc-500 inline-block" >Forgot password ?</a>
        <input class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge that you've read our Privacy Policy; Notice at collection.</p>
      </form>
      <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/" >Login Existing Account</a>
    </div>
  </div>
<% include ./partials/footer.ejs %>